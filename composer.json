{
    "name": "laravel-notification-channels/onewaysms",
    "description": "OneWaySMS Notifications channel for Laravel",
    "keywords": ["laravel", "notifications", "onewaysms", "message", "sms", "malaysia"],
    "homepage": "https://github.com/laravel-notification-channels/onewaysms",
    "license": "MIT",
    "authors": [
        {
            "name": "Zulkifli Mohamed",
            "email": "mr.putera@gmail.com",
            "homepage": "https://github.com/putera",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^6.4 || ^7.0",
        "illuminate/notifications": "5.5 - 5.8 || ~6.0 || ~7.0 || ~8.0",
        "illuminate/support": "5.5 - 5.8 || ~6.0 || ~7.0 || ~8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Onewaysms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Onewaysms\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "NotificationChannels\\Onewaysms\\OnewaysmsServiceProvider"
            ]
        }
    }
}
